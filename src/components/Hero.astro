---
const personalImageAlt = "Ayelmer Corzo";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
---

<section class="py-16 relative overflow-hidden">
  <!-- Fondo degradado -->
  <div class="absolute inset-0 -z-10"></div>

  <div class="max-w-4xl mx-auto px-4">
    <div
      class="flex flex-col items-center md:flex-row md:items-center md:justify-between gap-8"
    >
      <div class="flex-1 space-y-6 text-center md:text-left">
        <!-- Badge de disponibilidad -->
        <div
          class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-yellow-100 dark:bg-yellow-900/30 border border-yellow-200 dark:border-yellow-700"
        >
          <span class="relative flex h-3 w-3">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"
            ></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"
            ></span>
          </span>
          <a
            href="https://linkedin.com/in/ayelmercorzob"
            target="_blank"
            rel="noopener"
            class="text-sm font-medium text-yellow-800 dark:text-yellow-200"
          >
            No disponible
          </a>
        </div>

        <!-- Título -->
        <h1
          class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight text-gray-900 dark:text-white"
        >
          Hey, soy <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-yellow-600 dark:from-yellow-300 dark:to-yellow-500"
            >AyelmerDev</span
          >
        </h1>

        <!-- Descripción -->
        <p
          class="text-lg sm:text-xl text-gray-700 dark:text-gray-300 max-w-2xl mx-auto md:mx-0"
        >
          <strong class="font-semibold text-yellow-600 dark:text-yellow-300"
            >Desarrollador apasionado</strong
          > actualmente en <strong
            class="font-semibold text-yellow-600 dark:text-yellow-300"
            >Arroz Gelvez</strong
          >, creando soluciones digitales con código limpio y experiencias de
          usuario excepcionales.
        </p>

        <!-- Botones de contacto -->
        <div class="flex flex-wrap justify-center md:justify-start gap-3 mt-8">
          <SocialPill
            href="mailto:corzobarbosaa@gmail.com"
            class="transition-transform hover:scale-105"
          >
            <div class="flex items-center text-gray-900 dark:text-white">
              <MailIcon class="size-5 mr-2" />
              <span>Contáctame</span>
            </div>
          </SocialPill>
          <SocialPill
            href="https://linkedin.com/in/ayelmercorzob"
            class="transition-transform hover:scale-105"
          >
            <div class="flex items-center text-gray-900 dark:text-white">
              <LinkedInIcon class="size-5 mr-2" />
              <span>LinkedIn</span>
            </div>
          </SocialPill>
        </div>
      </div>

      <!-- Imagen de perfil -->
      <div class="relative w-40 h-40 sm:w-48 sm:h-48 md:w-56 md:h-56">
        <!-- Contenedor principal con borde y sombra -->
        <div
          class="absolute inset-0 rounded-full border-4 border-white dark:border-gray-800 shadow-xl overflow-hidden"
        >
          <!-- Fondo con efecto de gradiente y animación -->
          <div
            class="absolute inset-0 bg-gradient-to-r from-yellow-100 to-yellow-200 opacity-70 dark:from-yellow-900/20 dark:to-yellow-800/20 dark:opacity-50 animate-pulse"
          >
          </div>

          <!-- Imagen -->
          <img
            class="absolute inset-0 w-full h-full object-cover transform transition-transform duration-300 hover:scale-110"
            src="/images/image05.jpg"
            alt={personalImageAlt}
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .relative > div:first-child {
    animation: float 6s ease-in-out infinite;
  }
</style>
