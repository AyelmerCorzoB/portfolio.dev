---
const personalImageAlt = "Miguel Ángel"
import Badge from "../components/Badge.astro"
import LinkedInIcon from "../components/icons/LinkedIn.astro"
import MailIcon from "../components/icons/Mail.astro"
import SocialPill from "../components/SocialPill.astro"
---

<section class="py-16 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 -z-10"></div>
  
  <div class="max-w-4xl mx-auto px-4">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8">
      <div class="flex-1 space-y-6">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-yellow-100 dark:bg-yellow-900/30 border border-yellow-200 dark:border-yellow-700">
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
          </span>
          <a
            href="https://linkedin.com/in/ayelmercorzob"
            target="_blank"
            rel="noopener"
            class="text-sm font-medium text-yellow-800 dark:text-yellow-200"
          >
            Disponible para trabajar
          </a>
        </div>
        
        <h1 class="text-5xl md:text-6xl font-bold tracking-tight text-gray-800 dark:text-white">
          Hey, soy <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-yellow-600 dark:from-yellow-300 dark:to-yellow-500">AyelmerDev</span>
        </h1>
        
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl">
          <strong class="font-semibold text-yellow-500 dark:text-yellow-300">Desarrollador apasionado</strong> creando soluciones digitales con código limpio y experiencias de usuario excepcionales.
        </p>
        
        <div class="flex flex-wrap gap-3 mt-8">
          <SocialPill href="mailto:corzobarbosaa@gmail.com" class="transition-transform hover:scale-105">
            <div class="flex items-center"> <!-- Contenedor flex para alinear ícono y texto -->
              <MailIcon class="size-5 mr-2" />
              <span>Contáctame</span> <!-- Texto envuelto en un span para mejor control -->
            </div>
          </SocialPill>
          <SocialPill href="https://linkedin.com/in/ayelmercorzob" class="transition-transform hover:scale-105">
            <div class="flex items-center"> <!-- Contenedor flex para alinear ícono y texto -->
              <LinkedInIcon class="size-5 mr-2" />
              <span>LinkedIn</span> <!-- Texto envuelto en un span para mejor control -->
            </div>
          </SocialPill>
        </div>
      </div>
      
      <div class="relative">
        <div class="absolute -inset-1 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-full blur opacity-70 dark:opacity-50 animate-pulse"></div>
        <img
          class="relative rounded-full border-4 border-white dark:border-gray-800 shadow-xl size-32 md:size-40 object-cover"
          src="https://media.licdn.com/dms/image/v2/D5603AQEOR_Nbe-J3YQ/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1706660512351?e=1747267200&v=beta&t=aQz1FHjsu1rG7Rm4T8F_I-0m5SoDpgZnIE0l9JNA0Mk"
          alt={personalImageAlt}
        />
      </div>
    </div>
  </div>
</section>

