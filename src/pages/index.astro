---
import Layout from "../layouts/Layout.astro";
import AboutMe from "../components/About.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Experience from "../components/Experience.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Hero from "../components/Hero.astro";
import TitleSection from "../components/TitleSection.astro";
import Skills from "../components/Skills.astro";
import SkillsIcon from "../components/icons/SkillsIcon.astro";
import BackgroundPaths from "../components/Background";
import { getTranslations } from '../utils/translations';

const lang = 'es'; // o 'en'
const t = getTranslations(lang);
---

<Layout
  title="AyelmerDev | Desarrollador y Programador Web"
  description="Contrata a AyelmerDev para crear tu aplicación web o móvil. Desarrollador Web y Creador de Contenido. Especializado en crear aplicaciones únicas."
>
  <BackgroundPaths client:load />
  <main>
    <div class="w-full">
      <SectionContainer class="py-16 md:py-36">
        <Hero t={t} />
      </SectionContainer>
    </div>
  </main>
  <div class="space-y-24">
    <div class="w-full">
      <SectionContainer id="proyectos">
        <TitleSection>
          <CodeIcon class="size-7" />
          {t.projects} <!-- Texto traducido -->
        </TitleSection>
        <Projects t={t} /> <!-- Pasar traducciones al componente -->
      </SectionContainer>
    </div>

    <div class="w-full">
      <SectionContainer id="experiencia">
        <TitleSection>
          <Briefcase class="size-8" />
          {t.experience} <!-- Texto traducido -->
        </TitleSection>
        <Experience t={t} /> <!-- Pasar traducciones al componente -->
      </SectionContainer>
    </div>

    <div class="w-full">
      <SectionContainer id="habilidades">
        <TitleSection>
          <SkillsIcon class="size-8" />
          {t.skills} <!-- Texto traducido -->
        </TitleSection>
        <Skills t={t} /> <!-- Pasar traducciones al componente -->
      </SectionContainer>
    </div>

    <div class="w-full">
      <SectionContainer id="sobre-mi">
        <TitleSection>
          <ProfileCheck class="size-8" />
          {t.about} <!-- Texto traducido -->
        </TitleSection>
        <AboutMe t={t} /> <!-- Pasar traducciones al componente -->
      </SectionContainer>
    </div>
  </div>
</Layout>